set encoding=utf-8
" open line number
set number
set nocompatible
syntax on
set showmode
set showcmd
filetype indent on
set autoindent
set tabstop=2
set shiftwidth=2
" auto convert tab to space
set expandtab
" tab convert space number
set softtabstop=2
" current line highlight
set cursorline
set textwidth=100
set wrap
" show status bar
set laststatus=2
" brackets match
set showmatch
" highlight search
set hlsearch

